let rust_version = "stable"

fn lint() {
	check_empty_files()
	std.rust.cargo.check_fmt(rust_version, area)
	std.rust.cargo.clippy(rust_version, area)
}

fn test() {
	std.rust.cargo.test(rust_version, area, "rain-core", "", "dev")
}

fn check() {
	lint()
	test()
}

fn build() {
	std.rust.cargo.build(std.rust.stable, area, "rain", "", "dev", std.utils.host_info().triple)
}

fn build_release(target_triple) {
	std.rust.cargo.build(std.rust.stable, area, "rain", "", "release", target_triple)
}

fn build_c() {
	std.cc.gcc.compile(get_file("core/examples/run/foo.c"), "foo")
}

fn run() {
	binary = build_c()
	std.utils.run(std.utils.unit, binary, [], {})
}

fn helloworld() {
	src = std.utils.create_file("fn main() {\n\tprintln!(\"Hello world!\")\n}", "helloworld.rs")
	bin = std.rust.rustc.compile("stable", src, "helloworld", std.utils.host_info().triple, "2024")
	print(std.utils.run(std.utils.unit, bin, [], {}).stdout)
}

fn check_empty_files() {
	std.utils.foreach(std.utils.glob(area), std.lints.no_emptish)
}

