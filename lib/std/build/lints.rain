let area = internal._get_area(internal._module_file())
let utils = internal._import(internal._get_file(area, "utils.rain"))

let no_empty = fn(file) {
	metadata = utils.file_metadata(file)
	if metadata.size == 0 {
		utils.print(file)
		utils._throw("empty file")
	}
}

let no_emptish = fn(file) {
	metadata = utils.file_metadata(file)
	if metadata.size == 0 {
		utils.print(file)
		utils._throw("empty file")
	}
	if metadata.size == 1 {
		utils.print(file)
		utils._throw("1 byte file")
	}
}
