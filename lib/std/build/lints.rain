let std = import("std.rain")
let File = std.types.File

pub let no_empty = fn(file: File) {
	size = std.fs.size(file)
	if size == 0 {
		std.print(file)
		std.utils._throw("empty file")
	}
}

pub let no_emptish = fn(file: File) {
	size = std.fs.size(file)
	if size == 0 {
		std.print(file)
		std.utils._throw("empty file")
	}
	if size == 1 {
		std.print(file)
		std.utils._throw("1 byte file")
	}
}
