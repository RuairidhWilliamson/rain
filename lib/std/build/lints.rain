let std = import("std.rain")
let File = std.types.File

let no_empty = fn(file: File) {
	metadata = std.utils.file_metadata(file)
	if metadata.size == 0 {
		std.utils.print(file)
		std.utils._throw("empty file")
	}
}

let no_emptish = fn(file: File) {
	metadata = std.utils.file_metadata(file)
	if metadata.size == 0 {
		std.utils.print(file)
		std.utils._throw("empty file")
	}
	if metadata.size == 1 {
		std.utils.print(file)
		std.utils._throw("1 byte file")
	}
}
