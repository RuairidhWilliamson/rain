let std = import("std.rain")

pub let is_true = fn(b) {
	if !b {
		internal._throw("assertion failed: is true check")
	}
}

pub let equal = fn(a, b) {
	if a != b {
		internal._throw("assertion failed: equal check")
	}
}

pub let not_equal = fn(a, b) {
	if a == b {
		internal._throw("assertion failed: not equal check")
	}
}

pub let is_type = fn(a, typ) {
	if !std.types.check_type(a, typ) {
		internal._throw("assertion failed: is type check")
	}
}
