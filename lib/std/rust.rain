let cargo = internal.escape_bin("cargo")

fn check_fmt(area) {
	internal.run(area, cargo, "fmt", "--check")
}

fn clippy(area) {
	internal.run(area, cargo, "clippy", "--", "-Dwarnings")
}

fn test(area) {
	internal.run(area, cargo, "test")
}

fn run(area, package, features) {
	internal.run(area, cargo, "run", "-p", package, "-F", features)
}
